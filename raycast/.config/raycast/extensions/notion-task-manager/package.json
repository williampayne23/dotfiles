{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "notion-task-manager",
  "title": "Notion Task Manager",
  "description": "Looks through my Notion tasks",
  "icon": "notion-logo.png",
  "author": "williampayne23",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "preferences": [
    {
      "type": "password",
      "description": "We use this to access your Notion pages",
      "required": true,
      "title": "Notion API Key",
      "name": "notionToken"
    },
    {
      "type": "password",
      "description": "This is the id of the database tasks are stored in",
      "required": true,
      "title": "Database ID",
      "name": "allInOneDatabaseId"
    }
  ],
  "commands": [
    {
      "name": "allTasks",
      "title": "Show Todays Tasks",
      "description": "Show todays tasks",
      "mode": "view",
      "icon": "notion-logo.png"
    },
    {
      "name": "createNewTask",
      "title": "Create New Task",
      "description": "Create a new Notion task",
      "mode": "view",
      "icon": "notion-logo.png"
    },
    {
      "name": "tasksByProject",
      "title": "Show Tasks By Project",
      "description": "Show Tasks By Project",
      "mode": "view",
      "icon": "notion-logo.png"
    },
    {
      "name": "processDoneTasks",
      "title": "Process Done Tasks",
      "description": "Process Done Tasks",
      "mode": "no-view",
      "icon": "notion-logo.png"
    }
  ],
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "@raycast/api": "^1.36.1",
    "juration": "^0.1.1",
    "notion-to-md": "^2.3.4",
    "rrule": "^2.7.0"
  },
  "devDependencies": {
    "@types/node": "~16.10.0",
    "@types/react": "^17.0.28",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
