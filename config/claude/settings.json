      "Bash(readlink:*)",
      "Bash(mypy:*)",
      "Bash(pre-commit:*)",
      "Bash(pyright:*)",
      "Bash(pytest:*)",
      "Bash(ruff:*)",
      "Bash(test:*)",
      "Bash(tree:*)",
      "Bash(uv run mypy:*)",
      "Bash(uv run pre-commit:*)",
      "Bash(uv run pyright:*)",
      "Bash(uv run pytest:*)",
      "Bash(uv run ruff:*)",
      "Bash(uv sync:*)",
      "WebFetch(domain:docs.isambard.ac.uk)",
